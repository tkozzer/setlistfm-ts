{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@utils/*": ["src/utils/*"],
      "@endpoints/*": ["src/endpoints/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "examples", "tests", "*.ts", "eslint.config.mts"],
  "exclude": ["dist", "node_modules"]
}
