{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Release Notes Schema",
  "description": "Structured release notes format for setlistfm-ts",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Version number",
      "pattern": "^v?\\d+\\.\\d+\\.\\d+(?:[-a-z0-9.]+)?$"
    },
    "summary": {
      "type": "string",
      "description": "One sentence summary of the release"
    },
    "primary_section": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
        "emoji": {
          "type": "string",
          "pattern": "^\\p{Emoji}$",
          "description": "Section emoji"
        },
        "features": {
          "type": "array",
          "items": {"type": "string"},
          "minItems": 1
        }
      },
      "required": ["title", "emoji", "features"],
      "additionalProperties": false
    },
    "secondary_sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "emoji": {"type": "string"},
          "features": {
            "type": "array",
            "items": {"type": "string"},
            "minItems": 1
          }
        },
        "required": ["title", "emoji", "features"],
        "additionalProperties": false
      },
      "default": []
    },
    "commit_analysis": {
      "type": "object",
      "description": "Analysis of commit types and patterns",
      "properties": {
        "total_commits": {"type": "integer", "minimum": 0},
        "feat_count": {"type": "integer", "minimum": 0},
        "fix_count": {"type": "integer", "minimum": 0},
        "chore_count": {"type": "integer", "minimum": 0},
        "ci_count": {"type": "integer", "minimum": 0},
        "docs_count": {"type": "integer", "minimum": 0},
        "breaking_changes_detected": {"type": "boolean"}
      },
      "required": ["total_commits", "breaking_changes_detected"],
      "additionalProperties": false
    },
    "breaking_changes": {
      "type": "string",
      "description": "Breaking changes details or empty string if none",
      "maxLength": 1000
    },
    "footer_links": {
      "type": "object",
      "properties": {
        "npm": {"type": "string"},
        "changelog": {"type": "string"},
        "issues": {"type": "string"}
      },
      "required": ["npm", "changelog", "issues"],
      "additionalProperties": false
    }
  },
  "required": ["version", "summary", "primary_section", "commit_analysis", "breaking_changes", "footer_links"],
  "additionalProperties": false
}
